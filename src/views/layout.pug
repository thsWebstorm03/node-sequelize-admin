doctype html
html
  head
    title= pageTitle
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    script(src=req.baseUrl+"/static/moment-with-locales.min.js")
    script(src=req.baseUrl+"/static/moment-timezone-with-data-2012-2022.min.js")
    script(src=req.baseUrl+"/static/jquery.slim.min.js")
    script(src=req.baseUrl+"/static/umd/popper.min.js")
    script(src=req.baseUrl+"/static/js/bootstrap.min.js")
    link(href=req.baseUrl+"/static/css/bootstrap.min.css", rel="stylesheet")
    script(src=req.baseUrl+"/static/js/bootstrap-datetimepicker.min.js")
    link(href=req.baseUrl+"/static/css/bootstrap-datetimepicker.min.css", rel="stylesheet")
    link(href=req.baseUrl+"/static/css/open-iconic-bootstrap.min.css", rel="stylesheet")
    script(src=req.baseUrl+"/static/js/main.js")
    link(href=req.baseUrl+"/static/css/main.css", rel="stylesheet")
    - const modelAdmin = req.SA.modelAdminManager.getModelAdminByModelName(req.SA.modelName)
    if modelAdmin && modelAdmin.extra_resources
      each resource in modelAdmin.extra_resources
        | !{resource}    
  body
    if req.session.sa_emergency
      div.bg-danger.m-0.p-1.text-white= req.SA.tr("no_superuser_warning")
    block content
